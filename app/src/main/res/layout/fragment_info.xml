<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="30px"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="numero"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/num_id"
                android:text="numero 152"/>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Prenom"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prenom_id"
                android:text="numero 152"/>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Nom"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nom_id"
                android:text="numero 152"/>


        </LinearLayout>
        <LinearLayout
            android:layout_margin="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Formation"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/formation_id"
                android:text="numero 152"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/prec_btn"
            android:layout_margin="20px"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:text="precedant "
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/suiv_btn"
            android:layout_margin="20px"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:text="suivant "
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>